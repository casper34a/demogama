<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_group_form_inherit_grupoguiar" model="ir.ui.view">
        <field name="name">view.account.payment.group.form.inherit.grupoguiar</field>
        <field name="model">account.payment.group</field>
        <field name="inherit_id" ref="account_payment_group.view_account_payment_group_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="credit_limit"/>
                <field name="presented_invoice"/>
                <field name="invoice_amount" attrs="{'invisible' : [('presented_invoice', '=', False)]}" />
            </xpath>
        </field>
    </record>
</odoo>
